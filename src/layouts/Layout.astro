---
import { ClientRouter } from "astro:transitions";
import Footer from "./Footer.astro";
import Navbar from "./Navbar.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="./favicon.svg" />
		<meta
			name="description"
			content="Portafolio web de Claudio Bustos desarrollador web Frontend"
		/>
		<ClientRouter />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	*,
	*:after,
	*::before {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	@font-face {
		font-family: "Jost-SemiBold";
		src: url("../fonts/Jost-SemiBold.ttf") format("truetype");
		font-display: swap;
	}

	:root {
		--c1: #1d1f21;
		--c2: #f1f1f1;
		--c3: #222428;
		--c4: #facf11;
	}

	html,
	body {
		width: 100%;
		height: 100%;

		margin: 0;
		--bg-size: 20px;
		background-size: var(--bg-size) var(--bg-size);
		background-image: radial-gradient(var(--c1) 3px, var(--c3) 1px);

		font-family: "Jost-SemiBold";
		color: var(--c2);
	}

	main {
		padding: 20px 25px;
		min-height: calc(100vh - 125px);
	}

	a {
		text-decoration: none;
	}

	.flex-center {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	@media (width > 1980px) {
		body, .navbar-content, footer {
			margin: 0 auto;
		}
	}
</style>
