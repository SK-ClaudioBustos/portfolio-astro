---
import "@fontsource-variable/onest";
import { ClientRouter } from "astro:transitions";
import Footer from "./Footer.astro";
import Navbar from "./Navbar/Navbar.astro";

const { title, i18n } = Astro.props;
const currentLocale = Astro.currentLocale;
---

<!doctype html>
<html lang={currentLocale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="./favicon.svg" />
		<meta
			name="description"
			content="Portafolio web de Claudio Bustos desarrollador web Frontend"
		/>
		<ClientRouter />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer i18n={i18n} />
	</body>
</html>

<style is:global>
	*,
	*:after,
	*::before {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--c1: #1d1f21;
		--c2: #f1f1f1;
		--c3: #222428;
		--c4: #facf11;
	}

	html,
	body {
		width: min(1980px, 100%);

		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 5rem 0;

		--bg-size: 20px;
		background-size: var(--bg-size) var(--bg-size);
		background-image: radial-gradient(var(--c1) 3px, var(--c3) 1px);

		color: var(--c2);
		font-family:
			"Onest Variable",
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;

		scroll-behavior: smooth;
	}

	a {
		text-decoration: none;
	}

	.flex-center {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.section {
		display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-top: 5rem;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}

	@media (width > 1980px) {
		body,
		.navbar-content,
		footer,
		.welcome {
			margin: 0 auto;
		}
	}
</style>
