---
import Link from "@components/ui/Link.astro";
import GithubIcon from "@icons/social-media/github.svg";
import LinkedinIcon from "@icons/social-media/linkedin.svg";
---

<footer class="footer">
    <p>
        Check out the repository for this project
        <Link
            classType="link"
            ariaLabel="Go to the repository for this project"
            target="_blank"
            url="https://github.com/SK-ClaudioBustos/portfolio-astro"
        >
            here
        </Link>
    </p>
    <div class="social-media-links">
        <Link
            classType="link"
            target="_blank"
            url="https://www.linkedin.com/in/claudio-paul-bustos-rodrÃ­guez-395a0631a/"
            ariaLabel="Visit my LinkedIn profile"
        >
            <LinkedinIcon />
        </Link>
        <Link
            classType="link"
            target="_blank"
            url="https://github.com/SK-ClaudioBustos"
            ariaLabel="Visit my Github account"
        >
            <GithubIcon />
        </Link>
    </div>
</footer>

<style>
    .footer {-
        max-width: 1980px;
        min-height: 45px;
        padding: 10px 25px;

        display: flex;
        justify-content: space-between;

        & .social-media-links {
            display: flex;
            gap: 1rem;
        }
    }
</style>
