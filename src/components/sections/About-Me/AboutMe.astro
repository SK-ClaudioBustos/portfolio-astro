---
import SectionWrapper from "@components/ui/SectionWrapper.astro";
import Title from "@components/ui/Title.astro";
import { Image } from "astro:assets";
import Me from "./me.webp";

const { i18n } = Astro.props;
---

<SectionWrapper id="about-me">
    <div class="section">
        <Title>
            {i18n.ABOUT.TITLE}
        </Title>
        <div class="content">
            <div class="img-container">
                <Image
                    class="img"
                    src={Me}
                    alt="web developer picture"
                    loading="lazy"
                />
            </div>
            <div class="text-container">
                <h1>{i18n.ABOUT.SUBTITLE}</h1>
                <p>{i18n.ABOUT.BODY}</p>
            </div>
        </div>
    </div>
</SectionWrapper>

<style>
    .content {
        display: flex;
        flex-direction: row;
        gap: 1rem;

        & .img-container {
            width: 200px;
            height: 300px;
            object-fit: cover;

            & .img {
                border-radius: 5px;
                width: 200px;
                height: 300px;
            }
        }

        & .text-container {
            display: flex;
            flex-direction: column;
            gap: 2rem;

            max-width: 300px;
        }
    }

    @media (width <=768px) {
        .content {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
    }
</style>
