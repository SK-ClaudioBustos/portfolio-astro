---
import { getExperiencies } from "@data/experiences";
import TimeLineItem from "./TimeLineItem.astro";
const { currentLocale = "es" } = Astro;

const EXPERIENCIES = getExperiencies(currentLocale);
---

<ol class="timeline">
  {EXPERIENCIES.map((experiencie) => <TimeLineItem {...experiencie} />)}
</ol>

<style>
  .timeline {
    position: relative;
    border-left: 2px solid #e5e7eb;
    padding-left: 16px;
    list-style: none;
  }
</style>
