---
const { label } = Astro.props;
---

<div class="skill">
    <slot/>
    <span>{label}</span>
</div>


<style>
    .skill {
        display: flex;
        flex-direction: column;
        align-items: center;
        
        text-align: center;
        width: fit-content;
        & span {
            margin-top: 10px;
        }
    }
</style>