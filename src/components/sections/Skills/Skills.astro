---
import SectionWrapper from "@components/ui/SectionWrapper.astro";
import SkillsBox from "./SkillsBox.astro";
import Title from "@components/ui/Title.astro";

const { i18n } = Astro.props;
---

<SectionWrapper id="skills">
	<div class="skills-container">
		<Title>
			{i18n.SKILLS_TITLE}
		</Title>
		<SkillsBox />
	</div>
</SectionWrapper>

<style>
	.skills-container {
		width: 100%;
		height: 100%;
		margin-top: 5rem;
		text-align: center;

		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;
	}
</style>
