---
import SectionWrapper from "@components/ui/SectionWrapper.astro";
import SkillsBox from "./SkillsBox.astro";
---

<SectionWrapper id="skills">
	<div class="skills-container">
		<h1>My Stack</h1>
		<SkillsBox />
	</div>
</SectionWrapper>

<style>
	.skills-container {
		width: 100%;
		height: 100%;
		text-align: center;

		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1rem;

		& h1 {
			font-weight: bold;
			font-size: clamp(2.5rem, 5vw + 1rem, 3.5rem);
			letter-spacing: 0.7rem;
			margin-bottom: 20px;
		}
	}
</style>
