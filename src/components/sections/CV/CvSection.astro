---
import SectionWrapper from "@components/ui/SectionWrapper.astro";
import Title from "@components/ui/Title.astro";

const { i18n } = Astro.props;
---

<SectionWrapper id="cv">
  <div class="section cv-section">
    <Title>
      {i18n.CV.TITLE}
    </Title>
    <div class="img-container">
      <img
        src={`/cv-imgs/${i18n.CV.FILENAME}.webp`}
        alt="CV image"
        loading="lazy"
        fetchpriority="low"
      />
    </div>
    <a
      href={`/pdf/${i18n.CV.FILENAME}.pdf`}
      download
      aria-label="button for download CV"
    >
      <button>
        {i18n.CV.BUTTON_TEXT}
      </button>
    </a>
  </div>
</SectionWrapper>

<style>
  .cv-section {
    text-align: center;
    align-items: center;

    & .img-container {
      width: 300px;
      height: auto;
      filter: drop-shadow(0 0 15px #000);

      & img {
        border-radius: 10px;
        height: 100%;
        width: 100%;
      }
    }

    & a button {
      cursor: pointer;
      background-color: var(--c1);
      color: color-mix(in srgb, var(--c2), #000 45%);
      font-size: 1.2rem;
      padding: 5px 10px;
      border: 1px solid #fff;
      border-radius: 0 10px;

      &:hover {
        color: var(--c2);
        background-color: color-mix(in srgb, var(--c1), #fff 15%);
        border: 1px solid var(--c2);
      }
    }
  }

  html:not(.dark) .cv-section {
    & a button {
      background-color: var(--c2);
      color: #000;
      border: 1px solid #000;
      &:hover {
        color: var(--c2);
        background-color: #00000070;
      }
    }
  }
</style>
