---
import SectionWrapper from "@components/ui/SectionWrapper.astro";
import Title from "@components/ui/Title.astro";

const { i18n } = Astro.props;
---

<SectionWrapper id="cv">
    <div class="cv-section">
        <Title>
            {i18n.CV.TITLE}
        </Title>
        <div class="img-container">
            <img src="/CV.webp" alt="CV image" />
        </div>
        <a href=`/pdf/${i18n.CV.FILENAME}.pdf` download aria-label="button for download CV">
            <button>
                {i18n.CV.BUTTON_TEXT}
            </button>
        </a>
    </div>
</SectionWrapper>

<style>
    .cv-section {
        margin-top: 3rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;

        & .img-container {
            width: 300px;
            height: auto;

            & img {
                border-radius: 10px;
                height: 100%;
                width: 100%;
            }
        }

        & a button {
            cursor: pointer;
            background-color: var(--c1);
            font-size: 1.2rem;
            color: color-mix(in srgb, var(--c2), #000 45%);
            padding: 5px 10px;
            border: 1px solid #000;
            border-radius: 0 10px;

            &:hover {
                color: var(--c2);
                background-color: color-mix(in srgb, var(--c1), #fff 15%);
                border: 1px solid var(--c2);
            }
        }
    }
</style>
