---
import SectionWrapper from "@components/ui/SectionWrapper.astro";

const { i18n } = Astro.props;
---

<SectionWrapper id="welcome">
	<div class="welcome">
		<h1>{i18n.WELCOME_INTRODUCTION}</h1>
	</div>
</SectionWrapper>

<style>
	.welcome {
		text-align: center;
		width: minmax( 100% ,90ch);

		h1 {
			font-size: clamp(1rem, 3.5vw + 1rem, 2rem);
		}
	}
</style>
