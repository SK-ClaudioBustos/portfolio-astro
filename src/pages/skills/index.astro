---
import SkillBox from "@components/SkillsBox/SkillsBox.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Claudio Bustos | Skills">
	<section class="skills-section flex-center">
		<div class="container">
			<h1>My Stack</h1>
			<SkillBox />
		</div>
	</section>
</Layout>

<style>
	.skills-section {
		height: 100%;

		& .container {
			width: 100%;
			text-align: center;

			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 1rem;

			& h1 {
				font-weight: bold;
				font-size: clamp(2.5rem, 5vw + 1rem, 3.5rem );
				letter-spacing: 0.7rem;
				margin-bottom: 20px;
			}
		}
	}
</style>
